<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.CreateCharacterkie">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_marginStart="8dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="32dp"
            android:clipChildren="false"
            android:clipToPadding="false"
            app:cardBackgroundColor="@color/rose2"
            app:cardUseCompatPadding="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:strokeColor="@color/rose3"
            app:strokeWidth="3dp">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fillViewport="true">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraint_create_characterkie"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipChildren="false"
                    android:clipToPadding="false">

                    <ImageView
                        android:id="@+id/iv_background_basic_info_characterkie"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="8dp"
                        android:src="@drawable/button_backgground"
                        android:tintMode="multiply"
                        app:layout_constraintBottom_toTopOf="@+id/tb_CharacterkiePrivacity"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView16"
                        app:tint="@color/rose1" />

                    <Button
                        android:id="@+id/bt_state_characterkie"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:backgroundTint="@color/rose1"
                        android:drawableStart="@drawable/twotone_cake_24"
                        android:textColor="#FFFFFF"
                        app:icon="@drawable/twotone_cake_24"
                        app:iconGravity="start"
                        app:layout_constraintBottom_toTopOf="@+id/tb_CharacterkiePrivacity"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tv_status_characterkie"
                        app:strokeColor="#FFFFFF"
                        app:strokeWidth="3dp" />

                    <Button
                        android:id="@+id/bt_gender_characterkie"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:backgroundTint="@color/rose1"
                        android:drawableStart="@drawable/twotone_cake_24"
                        android:textColor="#FFFFFF"
                        app:icon="@drawable/twotone_cake_24"
                        app:iconGravity="start"
                        app:iconTint="#FFFFFF"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tv_gender_characterkie"
                        app:strokeColor="#FFFFFF"
                        app:strokeWidth="3dp" />

                    <Button
                        android:id="@+id/bt_pronouns_characterkie"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:backgroundTint="@color/rose1"
                        android:drawableStart="@drawable/twotone_cake_24"
                        android:textColor="#FFFFFF"
                        app:icon="@drawable/twotone_cake_24"
                        app:iconGravity="start"
                        app:iconTint="#FFFFFF"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tv_pronouns_characterkie"
                        app:strokeColor="#FFFFFF"
                        app:strokeWidth="3dp" />

                    <ImageButton
                        android:id="@+id/ib_select_img_create_characterkie"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_marginTop="24dp"
                        android:scaleType="fitCenter"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/et_nameCharacterkieCreateFull"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="42dp"
                        android:layout_marginEnd="16dp"
                        android:hint="@string/name"
                        android:textColorHint="@color/rose3"
                        app:boxBackgroundColor="@color/white"
                        app:boxCornerRadiusBottomEnd="58dp"
                        app:boxCornerRadiusBottomStart="58dp"
                        app:boxCornerRadiusTopEnd="58dp"
                        app:boxCornerRadiusTopStart="58dp"
                        app:boxStrokeColor="@color/rose3"
                        app:counterEnabled="true"
                        app:counterMaxLength="50"
                        app:counterOverflowTextColor="@color/rose3"
                        app:cursorColor="@color/rose3"
                        app:errorEnabled="false"
                        app:hintTextColor="@color/rose3"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/ib_select_img_create_characterkie"
                        app:startIconDrawable="@drawable/outline_person_24"
                        app:startIconTint="@color/rose3">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_nameCharacterkieCreate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:gravity="center"
                            android:inputType="text"
                            android:maxLength="50"
                            android:textAlignment="center"
                            android:textColor="@color/rose2"
                            android:textColorHint="@color/brownMaroon" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <Button
                        android:id="@+id/bt_birthday_characterkie"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:drawableStart="@drawable/twotone_cake_24"
                        android:textColor="#FFFFFF"
                        app:backgroundTint="@color/rose1"
                        app:icon="@drawable/twotone_cake_24"
                        app:iconGravity="start"
                        app:iconTint="#FFFFFF"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tv_birthday_characterkie"
                        app:strokeColor="#FFFFFF"
                        app:strokeWidth="3dp" />

                    <TextView
                        android:id="@+id/tv_birthday_characterkie"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="@string/birthday"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView16" />

                    <Switch
                        android:id="@+id/tb_CharacterkiePrivacity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="16dp"
                        android:gravity="center"
                        android:switchPadding="8dp"
                        android:text="@string/worldkie_privacity"
                        android:textColor="@color/rose3"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:thumb="@drawable/thumb_custom"
                        android:track="@drawable/track_custom"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/tb_characterkieDraft"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/bt_state_characterkie" />

                    <Switch
                        android:id="@+id/tb_characterkieDraft"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="16dp"
                        android:gravity="center"
                        android:switchPadding="8dp"
                        android:text="@string/draft"
                        android:textColor="@color/rose3"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:thumb="@drawable/thumb_custom"
                        android:track="@drawable/track_custom"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/tb_CharacterkiePrivacity"
                        app:layout_constraintTop_toBottomOf="@+id/iv_background_basic_info_characterkie" />

                    <TextView
                        android:id="@+id/tv_status_characterkie"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/status"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/bt_gender_characterkie" />

                    <TextView
                        android:id="@+id/tv_gender_characterkie"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/gender"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/bt_pronouns_characterkie" />

                    <TextView
                        android:id="@+id/tv_pronouns_characterkie"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/pronouns"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/bt_birthday_characterkie" />

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:backgroundTintMode="multiply"
                        android:src="@drawable/button_backgground"
                        android:tintMode="multiply"
                        app:layout_constraintBottom_toTopOf="@+id/textView16"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="1.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/et_nameCharacterkieCreateFull"
                        app:layout_constraintVertical_bias="0.0"
                        app:tint="@color/rose1" />

                    <TextView
                        android:id="@+id/tv_basic_info_characterkies"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="32dp"
                        android:layout_marginTop="8dp"
                        android:text="Datos basicos"
                        android:textColor="#FFFFFF"
                        android:textSize="24sp"
                        android:textStyle="bold|italic"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/et_nameCharacterkieCreateFull" />

                    <ImageButton
                        android:id="@+id/bt_basic_info_characterkies"
                        android:layout_width="33dp"
                        android:layout_height="33dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="16dp"
                        android:background="@android:color/transparent"
                        android:scaleType="fitCenter"
                        android:src="@drawable/twotone_arrow_drop_down_circle_24"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/et_nameCharacterkieCreateFull"
                        app:tint="@color/white" />

                    <TextView
                        android:id="@+id/textView16"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="------------------★-------------------"
                        android:textColor="@color/rose3"
                        android:textSize="24sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tv_basic_info_characterkies" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </ScrollView>
        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>