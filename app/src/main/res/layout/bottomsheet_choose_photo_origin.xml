<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="-5dp"
        app:cardBackgroundColor="#1E88E5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:strokeColor="#B35656"
        app:strokeWidth="3dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_choose_photo_default"
                android:layout_width="200dp"
                android:layout_height="51dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/button_backgground"
                android:foreground="@drawable/twotone_photo_filter_24"
                android:foregroundGravity="left|center"
                android:foregroundTint="#FFFFFF"
                android:gravity="center"
                android:text="@string/chooseIconkie"
                android:textColor="#FFFFFF"
                app:icon="@drawable/twotone_photo_filter_24"
                app:layout_constraintBottom_toTopOf="@+id/tv_choose_photo_gallery"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_choose_photo_gallery"
                android:layout_width="200dp"
                android:layout_height="51dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="13dp"
                android:background="@drawable/button_backgground"
                android:foreground="@drawable/twotone_photo_library_24"
                android:foregroundGravity="left|center"
                android:foregroundTint="#FFFFFF"
                android:gravity="center"
                android:text="@string/chooseGallery"
                android:textColor="#FFFFFF"
                app:icon="@drawable/twotone_photo_library_24"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_choose_photo_default" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>