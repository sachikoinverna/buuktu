<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.CreateEditWorldkie">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:strokeColor="#953F3F"
        app:strokeWidth="3dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/et_nameWorldkieCreateFull"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:hint="@string/name"
                    android:textAlignment="center"
                    app:boxCornerRadiusBottomEnd="58dp"
                    app:boxCornerRadiusBottomStart="58dp"
                    app:boxCornerRadiusTopEnd="58dp"
                    app:boxCornerRadiusTopStart="58dp"
                    app:counterEnabled="true"
                    app:counterMaxLength="50"
                    app:errorEnabled="false"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ib_select_img_create_worldkie"
                    app:startIconDrawable="@drawable/outline_person_24">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_nameWorldkieCreate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:gravity="center"
                        android:inputType="text"
                        android:maxLength="50"
                        android:textAlignment="center"
                        android:textColorHint="@color/brownMaroon" />

                </com.google.android.material.textfield.TextInputLayout>

                <ImageButton
                    android:id="@+id/ib_select_img_create_worldkie"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:onClick="selectImage"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/bt_saveWorldkie"
                    app:srcCompat="@drawable/worldkie_default" />

                <Switch
                    android:id="@+id/tb_worldkiePrivacity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:gravity="center"
                    android:switchPadding="8dp"
                    android:text="Private worldkie"
                    android:thumb="@drawable/thumb_custom"
                    android:track="@drawable/track_custom"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/tb_worldkieDraft"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/et_nameWorldkieCreateFull" />

                <Switch
                    android:id="@+id/tb_worldkieDraft"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:gravity="center"
                    android:switchPadding="8dp"
                    android:text="Borrador"
                    android:thumb="@drawable/thumb_custom"
                    android:track="@drawable/track_custom"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/tb_worldkiePrivacity"
                    app:layout_constraintTop_toBottomOf="@+id/et_nameWorldkieCreateFull" />

                <ImageButton
                    android:id="@+id/bt_saveWorldkie"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="8dp"
                    android:background="@android:color/transparent"
                    android:scaleType="fitCenter"
                    android:src="@drawable/twotone_save_24"
                    android:tint="#00A900"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/ib_select_img_create_worldkie"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </com.google.android.material.card.MaterialCardView>

</FrameLayout>